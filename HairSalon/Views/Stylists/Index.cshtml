@using HairSalon.Models;

@{
  Layout = "_Layout";
}

<div class="container">
  <div class="card">
    <h3 class="p-2 border-bottom">Viewing All Stylists</h3>

    @if (@Model.Count == 0)
    {
      <h4 class="p-5">No stylists have been added yet</h4>
    }
    else
    {
      <div class="container p-2">
        <ol>
          @foreach (Stylist stylist in Model)
          {
            <li>@Html.ActionLink($"{stylist.Name}", "Details", new { id = stylist.StylistId })</li>
          }
        </ol>
      </div>
    }

  </div>
  <p>@Html.ActionLink("Add a new Stylist", "Create", "Stylists", null, new { @class = "btn btn-info btn-block btn-lg" })</p>
</div>
