@model HairSalon.Models.Client;

@{
  Layout = "_Layout";
}

<div class="container">
  <div class="card">
    <h3 class="p-2 border-bottom">Add a new Client</h3>

    <div class="container">
      @using (Html.BeginForm())
      {
        @Html.LabelFor(model => model.Name)
        @Html.TextBoxFor(model => model.Name)

        @Html.LabelFor(model => model.Stylist)
        @Html.DropDownList("StylistId")

        <input type="submit" class="btn btn-block btn-info mt-2 mb-2" value="Add Client" />
      }
    </div>

  </div>
</div>
